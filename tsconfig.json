{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "@shared/*": [
        "./@shared/*"
      ],
      "@features/*": [
        "./@features/*"
      ],
      "@entities/*": [
        "./@entities/*"
      ],
      "@app/*": [
        "./@app/*"
      ],
      "@widget/*": [
        "./@widget/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "@shared/types/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
